{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch: [Debug|GDB]",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test/pmpp_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
